<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="?android:colorBackground"
    android:padding="3dp">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/product_image_description" />

    <TextView
        android:id="@+id/text_product_name"
        style="@style/cart_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image_product" />

    <TextView
        android:id="@+id/text_price"
        style="@style/cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/text_mrp" />

    <TextView
        android:id="@+id/text_mrp"
        style="@style/cart_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/image_product" />
    <TextView
        android:id="@+id/text_savings"
        style="@style/cart_savings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/text_price" />

    <ImageView
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/frame_button"
        android:src="@drawable/ic_baseline_delete_outline_24" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/frame_button"
        android:layout_centerVertical="true">
        <include
            android:id="@+id/change_amount"
            layout="@layout/plus_minus_button" />
    </FrameLayout>
    <!-- <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/text_amount"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         style="@style/cart_amount"
         />-->

</RelativeLayout>